                .swiper-button-prev
                .home-slider-pagination-control
                    .home-slider-pagination-control-fraction#pagination-control-fraction
                    .swiper-pagination
            .swiper.home-slider-images
                .swiper-wrapper
                    .swiper-slide
                        img(src='/assets/images/slider/home/1.png')
                    .swiper-slide
                        img(src='/assets/images/slider/home/2.png')
                    .swiper-slide
                        img(src='/assets/images/slider/home/3.png')
                    .swiper-slide
                        img(src='/assets/images/slider/home/4.png')
                    .swiper-slide
                        img(src='/assets/images/slider/home/5.png')
